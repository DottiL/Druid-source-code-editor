<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/templates_top_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statements"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/top_bar"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:id="@+id/templates_statements_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keywords"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/top_bar"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:id="@+id/templates_keywords_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operators"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/top_bar"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:id="@+id/templates_operators_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Types"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:background="@color/top_bar"
            android:textSize="17dp"
            android:id="@+id/templates_types_button" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/templates_top_bar"
        android:layout_alignParentStart="true"
        android:id="@+id/templates_grid_container"
        android:background="@color/templates">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/templates_statements_grid"
            android:layout_alignParentTop="true"
            android:numColumns="auto_fit"
            android:layout_alignParentStart="true"
            android:fastScrollEnabled="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/templates_keywords_grid"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:numColumns="auto_fit"
            android:visibility="gone"
            android:fastScrollEnabled="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/templates_operators_grid"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:numColumns="auto_fit"
            android:fastScrollEnabled="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/templates_types_grid"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:numColumns="auto_fit"
            android:visibility="gone"
            android:fastScrollEnabled="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>